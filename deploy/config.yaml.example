# BabyTrack Production Configuration
# Copy this file to /opt/babytrack/config.yaml and fill in the values

server:
  port: 8080
  # Your public domain with https
  base_url: https://your-domain.com

database:
  # PostgreSQL connection string
  # Format: postgres://user:password@host:port/database?sslmode=require
  dsn: postgres://babytrack:CHANGE_THIS_PASSWORD@localhost:5432/babytrack?sslmode=disable

auth:
  # Get these from Google Cloud Console:
  # https://console.cloud.google.com/apis/credentials
  google_client_id: your-google-client-id.apps.googleusercontent.com
  google_client_secret: your-google-client-secret

  # Generate a secure random string (at least 32 characters)
  # Example: openssl rand -base64 32
  jwt_secret: CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

notifications:
  enabled: true
